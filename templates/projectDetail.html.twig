{% extends 'base.html.twig' %}

{% block title %}Проект{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        <h3><i class="fa-solid fa-diagram-project fa-xl" style="color: #74C0FC;"></i> {{ project.title }}</h3>

        <p class="mt-3">{{ project.description }}</p>
        <div class="row mt-5">
            <div class="col-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Задачи</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for task in groupped_tasks  %}
                            <tr>
                                <td>{{ task.type }}</td>
                                <td><a href="">{{ task.1 }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-6 d-flex justify-content-center align-items-center">
                {% if project.img %}
                    <img class="img-fluid" src="{{ asset('uploads/logos/' ~ project.img) }}" alt="projectLogo">
                {% else %}
                    <img class="img-fluid" src="https://via.placeholder.com/300x300" alt="projectLogo">
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
